{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "tsx watch src/server.ts",
		"start": "node dist/index.js",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"test:watch": "vitest --watch",
		"test:once": "vitest run --coverage",
		"test:ci": "vitest run"
	},
	"dependencies": {
		"@fastify/cors": "^11.0.1",
		"@trpc/client": "^11.5.0",
		"@trpc/server": "^11.5.0",
		"@vercel/postgres": "^0.10.0",
		"better-auth": "^1.3.13",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.2",
		"fastify": "^5.3.3",
		"pg": "^8.14.1",
		"zod": "^4.0.2"
	},
	"devDependencies": {
		"@faker-js/faker": "^10.0.0",
		"@types/node": "^22.13.11",
		"@types/pg": "^8.11.11",
		"@types/supertest": "^6.0.3",
		"@vercel/node": "^5.3.23",
		"@vitest/coverage-v8": "^3.2.4",
		"cross-env": "^10.0.0",
		"dotenv-cli": "^10.0.0",
		"drizzle-kit": "^0.31.2",
		"supertest": "^7.1.4",
		"ts-node": "^10.9.2",
		"tsdown": "^0.15.1",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	}
}
